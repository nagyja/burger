<h1>Eat the Burgers</h1>

<div class="toBeEaten">
    <h2>Eat these burgers!</h2>
    <ul>
        {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">EAT IT!</button>
                    </form>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="eaten">
    <h2>You've Eaten all these burgers!</h2>
    <ul>
        {{#each burgers}}
            {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>

<div class ="addBurger">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit">ADD BURGER</button>
    </form>
</div>